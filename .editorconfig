# Root EditorConfig file, indicating that this is the top-most .editorconfig file
root = true

# Global settings for all files
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Java-specific rules based on Google Java Style, including import-related guidelines
[*.java]
indent_size = 2
continuation_indent_size = 4
max_line_length = 100

# JSON-specific rules (commonly use 2 spaces for indentation)
[*.json]
indent_size = 2